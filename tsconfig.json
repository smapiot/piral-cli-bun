{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "jsx": "react",
    "noLib": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "sourceMap": true,
    "lib": ["es6", "dom", "esnext"],
    "types": ["bun-types"]
  },
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "packages/**/node_modules",
    "packages/**/lib"
  ]
}
